{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "declaration": true,
    "module": "ES6",
    "outDir": "package",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  }
}
